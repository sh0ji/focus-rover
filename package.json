{
  "name": "focus-rover",
  "version": null,
  "description": "Set a roving focus on a group of elements.",
  "keywords": [
    "a11y",
    "accessibility",
    "focus",
    "roving",
    "tabindex"
  ],
  "homepage": "https://github.com/sh0ji/focus-rover#readme",
  "bugs": {
    "url": "https://github.com/sh0ji/focus-rover/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sh0ji/focus-rover.git"
  },
  "license": "MIT",
  "author": "Evan Yamanishi",
  "files": [
    "lib",
    "src"
  ],
  "main": "dist/focus-rover.js",
  "types": "dist/focus-rover.d.ts",
  "scripts": {
    "build": "rm -rf lib && tsc -p .",
    "lint": "eslint '**/*.ts'",
    "prepublishOnly": "npm run build",
    "release": "standard-version --sign",
    "test": "nyc ava"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "ava": "^2.4.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "nyc": "^14.1.1",
    "standard-version": "^7.0.0",
    "typescript": "^3.7.2"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "helpers": [
      "**/helpers/**/*"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
